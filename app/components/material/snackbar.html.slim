.snackbar(data-controller='snackbar' data-target='snackbar.container' class=('snackbar-multi-line' if message.size > 75))
  .snackbar-body
    = message
    - if action
      span.snackbar-btn.d-inline-block.ml-4
        =< action
  button type="button" class="text-light close ml-2" data-dismiss="modal" aria-label="Close" data-action='snackbar#hide'
    span aria-hidden="true" &times;
