var el             = document.getElementById('<%= @book.dom_id(:collapse) %>');
var snackbar       = document.createElement('div');
el.outerHTML       = '<%= j render(partial: 'books/collapse', object: @book, as: :book, locals: { show: true, parent: 'books' }) %>';
snackbar.innerHTML = '<%= j render(partial: 'shared/snackbar') %>';
document.body.appendChild(snackbar.firstChild);

$('#<%= @book.dom_id %>')
  .find('.floating-label .custom-select, .floating-label .form-control')
  .floatinglabel();
